<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>
							Name
						</th>
						<th>
							Company
						</th>
						<th>
							Location
						</th>
						<th>
							Phone
						</th>
            <th>
            </th>
					</tr>
				</thead>
				<tbody>
          <% @leads.each do |lead| %>
          <tr>
            <td><%= lead.name %></td>
            <td><%= lead.company %></td>
            <td><%= lead.location %></td>
            <td><%= lead.phone %></td>
            <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
          </tr>
          <% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

</table>
<hr>

<%= link_to 'New Lead', new_lead_path %>

<hr>
<div class="well">
  <%= form_tag import_leads_path, multipart: true do %>
    <%= file_field_tag :file %>
    <br>
    <%= submit_tag "Import Leads", class: "btn btn-default" %>
  <% end %>
</div>
